<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EuropeanCoffees.Views.FilterView"
             xmlns:vm="using:EuropeanCoffees.ViewModels"
             x:DataType="vm:FilterViewModel">

    <StackPanel Orientation="Horizontal">
        <ComboBox Items="{Binding Countries}" SelectedItem="{Binding SelectedCountry}"/>
        <ComboBox Items="{Binding Varieties}" SelectedItem="{Binding SelectedVariety}"/>
        <ComboBox Items="{Binding Processings}" SelectedItem="{Binding SelectedProcessing}"/>
        <ComboBox Items="{Binding Roasts}" SelectedItem="{Binding SelectedRoast}"/>
        <Button Command="{Binding OnUpdate}">Update</Button>
    </StackPanel>
</UserControl>
